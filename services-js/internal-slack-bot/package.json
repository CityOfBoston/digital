{
  "name": "services-js.internal-slack-bot",
  "version": "0.0.1",
  "description": "Internal Slack utility bot",
  "private": true,
  "scripts": {
    "dev": "yarn run prebuild && tsc-watch --onSuccess \"yarn run start\"",
    "pretest": "tsc --noEmit",
    "test": "jest",
    "prebuild": "rimraf build",
    "build": "tsc",
    "start": "node build/server",
    "prepare": "yarn run build",
    "codebuild-deploy": "npx -p ../../deploy-tools.tgz codebuild-service-deploy Dockerfile",
    "tunnel": "npx ngrok http 8000",
    "test-deploy": "ts-node ./scripts/test-deploy.ts"
  },
  "license": "CC0-1.0",
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/build/",
      "<rootDir>/node_modules/",
      "<rootDir>/scripts/"
    ]
  },
  "dependencies": {
    "@cityofboston/hapi-common": "^0.0.0",
    "@cityofboston/srv-decrypt-env": "^0.0.0",
    "@slack/client": "^4.8.0",
    "@slack/events-api": "^2.1.1",
    "@slack/interactive-messages": "^1.0.2",
    "aws-sdk": "^2.168.0",
    "babel-runtime": "^6.23.0",
    "boom": "^7.2.0",
    "core-js": "^2.6.4",
    "dotenv": "^4.0.0",
    "github-webhook-handler": "^0.7.1",
    "hapi": "^17.5.2",
    "lru-cache": "^4.1.3",
    "ngrok": "^3.1.0",
    "node-cleanup": "^2.1.2",
    "node-fetch": "^2.0.0",
    "rollbar": "^2.5.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.0",
    "@babel/core": "^7.6.0",
    "@cityofboston/config-babel": "^0.0.0",
    "@cityofboston/config-typescript": "^0.0.0",
    "@types/aws-sdk": "^2.7.0",
    "@types/boom": "^7.2.0",
    "@types/hapi": "^17.0.19",
    "@types/jest": "24.x.x",
    "@types/lru-cache": "^4.1.1",
    "@types/node": "^8.0.0",
    "@types/node-fetch": "^2.1.2",
    "babel-core": "^7.0.0-0",
    "del": "^3.0.0",
    "jest": "^24.8.0",
    "rimraf": "^2.6.2",
    "sinon": "^4.1.3",
    "ts-node": "^6.0.5",
    "tsc-watch": "^1.0.26",
    "typescript": "^3.4.5"
  }
}
