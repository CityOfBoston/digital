{
  "extends": "./node_modules/@cityofboston/config-typescript/tsconfig.default.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "allowJs": true,
    "declaration": false,
    "module": "esnext",
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "components/**/*",
    "data/**/*",
    "lib/**/*",
    "pages/**/*",
    "scripts/**/*",
    "server/**/*",
    "templates/**/*"
  ],
  "exclude": ["scripts/*.js"]
}
