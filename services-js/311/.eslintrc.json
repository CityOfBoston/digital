{
  "parser": "babel-eslint",
  "extends": [
    "airbnb",
    "plugin:flowtype/recommended"
  ],
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  },
  "plugins": [
    "flowtype",
    "react",
    "jsx-a11y",
    "import"
  ],
  "rules": {
    "no-else-return": 0,
    "import/no-duplicates": 0,
    "react/no-array-index-key": 0,
    "jsx-a11y/label-has-for": 0,
    "class-methods-use-this": 0,
    "arrow-parens": [ "error", "always" ],
    "import/prefer-default-export": 0,
    "max-len": 0,
    "react/prop-types": 0,
    "react/jsx-filename-extension": 0,
    "import/no-extraneous-dependencies": [
      "error",
      {"devDependencies": ["storybook/**.js", "**/*.test.js", "**/*.stories.js", "scripts/*.js", "*.config.js"]}
    ],
    "react/sort-comp": [1, {
      "order": [
        "type-annotations",
        "static-methods",
        "lifecycle",
        "everything-else",
        "render",
        "/^render.+$/"
      ]
    }]
  }
}
