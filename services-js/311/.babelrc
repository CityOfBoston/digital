{
  "presets": [
    "next/babel",
    "@babel/preset-flow"
  ],

  "plugins": [
    ["@babel/plugin-proposal-decorators", { "legacy": true }],
    ["@babel/plugin-proposal-class-properties", { "loose": true }],

    ["inline-import", {
        "extensions": [
          ".graphql",
          ".env",
          ".html"
        ]
      }]
  ],
  
  "env": {
    "test": {
      "plugins": ["babel-plugin-require-context-hook"],
      "presets": [
        [
          "next/babel",
          {
            "preset-env": {
              "modules": "commonjs"
            }
          }
        ]
      ]
    }
  }
}
