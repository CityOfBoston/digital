{
  "name": "payment-webhooks-server",
  "version": "0.1.0",
  "description": "Service to update iNovah based on webhook calls from a payment provider",
  "engines": {
    "node": "8.1.0"
  },
  "scripts": {
    "dev": "babel-watch -D -w server server",
    "test": "jest --watch --coverage",
    "test-ci": "jest --runInBand --coverage",
    "lint": "eslint --fix .",
    "precommit": "lint-staged",
    "prepush": "flow --quiet && jest --silent --no-cache --noStackTrace --lastCommit"
  },
  "lint-staged": {
    "*.js": "eslint --quiet"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CityOfBoston/payment-webhooks-server.git"
  },
  "author": "",
  "license": "CC0-1.0",
  "bugs": {
    "url": "https://github.com/CityOfBoston/payment-webhooks-server/issues"
  },
  "homepage": "https://github.com/CityOfBoston/payment-webhooks-server#readme",
  "jest": {
    "collectCoverageFrom": [
      "{server}/**/*\\.js"
    ],
    "coverageReporters": [
      "lcov",
      "json"
    ]
  },
  "dependencies": {
    "babel-runtime": "^6.23.0",
    "boom": "^5.1.0",
    "dotenv": "^4.0.0",
    "good": "^7.2.0",
    "good-console": "^6.4.0",
    "good-squeeze": "^5.0.2",
    "hapi": "^16.4.3",
    "node-cleanup": "^2.1.2",
    "opbeat": "^4.14.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-plugin-syntax-flow": "^6.18.0",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.5.2",
    "babel-watch": "^2.0.6",
    "codecov": "^2.2.0",
    "eslint": "^3",
    "eslint-config-prettier": "^2.1.1",
    "eslint-plugin-flowtype": "^2.34.0",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-prettier": "^2.1.2",
    "flow-bin": "^0.48.0",
    "gulp": "^3.9.1",
    "husky": "^0.13.4",
    "jest": "^20.0.4",
    "lint-staged": "^3.6.1",
    "prettier": "^1.4.4"
  }
}
