{
  "name": "311-indexer",
  "version": "1.0.0",
  "scripts": {
    "dev": "babel-watch -D -w server server",
    "test": "jest",
    "test-ci": "jest --coverage --runInBand --forceExit",
    "report-coverage": "codecov",
    "build": "gulp build",
    "start": "node build/server",
    "lint": "eslint --fix .",
    "precommit": "lint-staged",
    "prepush": "flow --quiet && jest --silent --no-cache --noStackTrace"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CityOfBoston/311-indexer.git"
  },
  "license": "CC0-1.0",
  "engines": {
    "node": "8.2.1",
    "npm": "5.3.0"
  },
  "lint-staged": {
    "*.js": "eslint --quiet"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/build/",
      "<rootDir>/node_modules/",
      "<rootDir>/coverage/"
    ],
    "collectCoverageFrom": [
      "{server}/**/*\\.js",
      "!lib/test/*.js"
    ],
    "coverageReporters": [
      "lcov",
      "json"
    ]
  },
  "dependencies": {
    "babel-runtime": "^6.23.0",
    "dotenv": "^4.0.0",
    "node-cleanup": "^2.1.2",
    "opbeat": "^4.14.2"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-flow": "^6.23.0",
    "babel-watch": "^2.0.7",
    "codecov": "^2.2.0",
    "eslint": "^4.2.0",
    "eslint-config-prettier": "^2.3.0",
    "eslint-plugin-flowtype": "^2.35.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-prettier": "^2.1.2",
    "flow-bin": "^0.50.0",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-cli": "^1.3.0",
    "gulp-ignore": "^2.0.2",
    "gulp-plumber": "^1.1.0",
    "husky": "^0.14.3",
    "jest": "^20.0.4",
    "lint-staged": "^4.0.2",
    "prettier": "^1.5.3"
  }
}
