{
  "name": "access-boston",
  "version": "0.0.0",
  "description": "Frontend for SSO-enabled apps list",
  "private": true,
  "license": "CC0-1.0",
  "scripts": {
    "prebuild": "rimraf build && npm run generate-graphql-schema && npm run generate-graphql-types",
    "build": "concurrently \"npm run build:server\" \"npm run build:next\"",
    "build:server": "tsc -p tsconfig.server.json",
    "build:next": "next build src",
    "dev": "npm run prebuild && tsc-watch -p tsconfig.server.json --onSuccess \"npm run start\"",
    "storybook": "start-storybook -p 9001",
    "watch-dependencies": "lerna run --parallel --scope access-boston --include-filtered-dependencies watch",
    "prepare": "npm run build",
    "start": "node build/server/start",
    "pretest": "tsc --noEmit",
    "test": "npm run testcafe:local && scripts/test.js",
    "testcafe:dev": "testcafe-live remote src/**/*.testcafe.*",
    "testcafe:local": "npm run build && cross-env TEST_SERVER_URL=http://localhost:3032 PORT=3032 NODE_ENV=testcafe testcafe -a 'node build/server/start' --app-init-delay 3000 -S -s screenshots -c 3 chrome:headless src/**/*.testcafe.*",
    "generate-graphql-schema": "mkdir -p graphql && ts2gql src/server/graphql/schema.ts > graphql/schema.graphql",
    "generate-graphql-types": "apollo-codegen generate src/client/**/*.ts --project-name access-boston --target typescript --output src/client/graphql/queries.d.ts && prettier --write src/client/graphql/queries.d.ts",
    "travis-deploy": "travis-service-deploy deploy/Dockerfile"
  },
  "jest": {
    "preset": "@cityofboston/config-jest-babel"
  },
  "resolutions": {
    "graphql": "0.13.2"
  },
  "dependencies": {
    "@babel/runtime": "7.0.0",
    "@cityofboston/deploy-tools": "^0.0.0",
    "@cityofboston/hapi-common": "^0.0.0",
    "@cityofboston/hapi-next": "^0.0.0",
    "@cityofboston/next-client-common": "^0.0.0",
    "@cityofboston/percy-common": "^0.0.0",
    "@cityofboston/srv-decrypt-env": "^0.0.0",
    "apollo-server-hapi": "^1.3.6",
    "boom": "^7.2.0",
    "crumb": "^7.1.0",
    "dotenv": "^5.0.1",
    "emotion": "^9.2.10",
    "emotion-server": "^9.2.10",
    "formik": "^1.0.3",
    "graphql": "^0.13.2",
    "graphql-tools": "^3.0.0",
    "hapi": "^17.4.0",
    "hapi-accept-language2": "^2.0.3",
    "js-yaml": "^3.12.0",
    "next": "7.0.0",
    "next-cookies": "^1.0.2",
    "node-cleanup": "^2.1.2",
    "node-fetch": "^2.2.0",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "saml2-js": "^2.0.3",
    "xmldom": "^0.1.27",
    "xpath": "^0.0.27",
    "yar": "^9.0.1",
    "yup": "0.26.6"
  },
  "devDependencies": {
    "@babel/cli": "7.0.0",
    "@babel/core": "7.0.0",
    "@cityofboston/config-babel": "^0.0.0",
    "@cityofboston/config-jest-babel": "^0.0.0",
    "@cityofboston/config-typescript": "^0.0.0",
    "@cityofboston/graphql-typescript": "^0.0.0",
    "@cityofboston/react-fleet": "^0.0.0",
    "@percy-io/percy-storybook": "^1.4.1",
    "@storybook/addon-actions": "4.0.0-alpha.22",
    "@storybook/addon-storyshots": "4.0.0-alpha.22",
    "@storybook/addons": "4.0.0-alpha.22",
    "@storybook/react": "4.0.0-alpha.22",
    "@types/jest": "^22.2.3",
    "@types/node": "^9.6.5",
    "@types/react": "^16.4.7",
    "@types/storybook__addon-actions": "^3.0.3",
    "@types/storybook__addon-storyshots": "^3.4.1",
    "@types/storybook__react": "^3.0.7",
    "@types/yar": "^9.0.4",
    "@zeit/next-typescript": "1.1.1",
    "apollo-codegen": "0.20.2",
    "babel-core": "^7.0.0-0",
    "babel-plugin-require-context-hook": "^1.0.0",
    "concurrently": "^3.5.1",
    "cross-env": "^5.1.5",
    "eslint-plugin-graphql": "^2.1.1",
    "faker": "^4.1.0",
    "jest": "23.6.0",
    "prettier": "^1.12.0",
    "raw-loader": "^0.5.1",
    "react-test-renderer": "^16.4.0",
    "rimraf": "^2.6.2",
    "testcafe": "^0.22.0",
    "testcafe-live": "^0.1.3",
    "ts-node": "^6.0.5",
    "ts2gql": "CityOfBoston/ts2gql#4f10fcce",
    "tsc-watch": "^1.0.26",
    "typescript": "^3.0.0"
  }
}
