{
  "name": "digital",
  "description": "Boston Digital Team monorepo",
  "version": "0.0.0",
  "license": "CC0-1.0",
  "private": true,
  "engines": {
    "yarn": "^1.6.0"
  },
  "jest": {
    "projects": [
      "<rootDir>/modules-js/*",
      "<rootDir>/services-js/*"
    ]
  },
  "workspaces": {
    "packages": [
      "services-js/*",
      "services-ruby/*",
      "modules-js/*",
      "templates/js-*",
      "templates/js-*/build/*"
    ],
    "nohoist": [
      "**/@cityofboston/config-typescript",
      "**/acorn",
      "**/acorn-dynamic-import"
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "prepare": "lerna run --scope @cityofboston/* prepare",
    "precommit": "lint-staged && lerna run --since HEAD --stream --no-sort precommit",
    "prepush": "jest --clearCache && lerna run --no-sort --stream --since origin/develop --ignore templates.* test",
    "watch": "lerna run --parallel --scope @cityofboston/* watch"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --quiet"
  },
  "devDependencies": {
    "@yarnpkg/lockfile": "^1.0.0",
    "@babel/core": "^7.4.4",
    "babel-eslint": "^11.0.0-beta.0",
    "eslint": "^5.16.0",
    "eslint-plugin-emotion": "^10.0.7",
    "eslint-config-prettier": "^4.2.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react-hooks": "^1.5.0",
    "husky": "^0.14.3",
    "jest": "^24.8.0",
    "jest-environment-jsdom": "24.0.0",
    "jest-environment-node": "24.0.0",
    "khaos": "^0.9.3",
    "lerna": "^3.13.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.17.0",
    "typescript": "^3.4.5"
  }
}
