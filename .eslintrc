{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true,
    "node": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2017,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "emotion",
    "prettier",
    "react-hooks"
  ],
  "extends": [
    "eslint:recommended",
    "prettier",
    "prettier/react"
  ],
  "rules": {
    "emotion/jsx-import": "error",
    "prettier/prettier": "error",
    "react-hooks/rules-of-hooks": "error"
  },
  "overrides": [
    {
      "files": [ "*.ts", "*.tsx" ],
      "parser": "typescript-eslint-parser",
      "rules": {
        "no-unused-vars": 0,
        "no-undef": 0
      }
    }
  ]
}
